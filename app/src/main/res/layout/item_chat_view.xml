<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_spacing_8"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_chat_user_image"
        android:layout_width="@dimen/image_size_36"
        android:layout_height="@dimen/image_size_36"
        android:layout_marginEnd="@dimen/view_spacing_16"
        android:src="@drawable/gift_box"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_chat_border"
        android:padding="@dimen/view_spacing_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_chat_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_text_hint"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_spacing_16"
        android:layout_gravity="center"
        android:text="14.25" />
</LinearLayout>