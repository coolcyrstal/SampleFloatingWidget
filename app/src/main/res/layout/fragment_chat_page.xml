<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLivePrimaryTransparent"
    tools:context=".ChatPageFragment">

    <LinearLayout
        android:id="@+id/chat_page_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLivePrimaryDark"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_page_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222"
            android:textColor="@color/colorLiveTextTitle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/chat_page_gift_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorLivePrimaryDark"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_gravity="start">

            <ImageView
                android:id="@+id/chat_page_chat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_gift" />

            <ImageView
                android:id="@+id/chat_page_gift"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gift" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_page_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_page_send_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLivePrimaryDark"
        android:layout_gravity="bottom"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_gift"/>


    </LinearLayout>
</LinearLayout>