<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/view_spacing_8"
    android:paddingBottom="@dimen/view_spacing_8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_gift_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_gift"
        android:tint="@color/colorLiveRed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_spacing_8"
        android:paddingStart="@dimen/view_spacing_8"
        android:paddingEnd="@dimen/view_spacing_8"
        android:background="@drawable/shape_coin_border"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/view_spacing_4"
        android:paddingBottom="@dimen/view_spacing_4">

        <ImageView
            android:id="@+id/item_gift_coin"
            android:layout_width="@dimen/image_size_20"
            android:layout_height="@dimen/image_size_20"
            android:src="@drawable/ic_gift" />

        <TextView
            android:id="@+id/item_gift_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_spacing_8"
            android:text="111"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>